            <ImageView fitHeight="28.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@refresh-page-option.png"/>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label layoutX="103.0" layoutY="156.0" text="press Esc to Exit " textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </AnchorPane>
</AnchorPane>
