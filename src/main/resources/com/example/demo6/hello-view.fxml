<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo6.SnakeGameController">
   <Canvas fx:id="gameCanvas" height="500.0" width="500.0" />
